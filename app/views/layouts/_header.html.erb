<div id ="fh5co-header">
  <header class="fh5co-header-section">
    <div class="container">
      <div class="nav-header">
        <div id="top-logo">
          <%= link_to(image_tag("house_coffee.png", :alt => "house_coffeeのロゴ写真"), root_url, id: 'logo') %>
        </div>
        <nav id="fh5co-menu-wrap">
          <ul class="nav-header sf-menu a">
            <li><%= link_to 'House Coffeeとは？', about_path %></li>
            <% if logged_in? %>
              <% if current_user.notification == true %>
                <li class="new_notification header-link">
              <% else %>
                <li class="no_notification header-link">
              <% end %>
              <%= link_to notifications_path do %><span>通知</span><% end %>
              </li>
              <li><%= link_to 'お気に入り', favorites_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  アカウント <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'プロフィール', current_user %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'ユーザー', users_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'ユーザー登録(無料)', signup_path %></li>
              <li><%= link_to 'ログイン', login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </header>
</div>
